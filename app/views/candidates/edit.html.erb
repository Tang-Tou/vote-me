<h1>編輯候選人資料</h1>

<% if @candidate.errors.any? %>
<ul>
  <% @candidate.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>


<%= form_for(@candidate) do |form| %>

<div>
  <%= form.label :name, "姓名" %>
  <%= form.text_field :name %>
</div>

<div>
  <%= form.label :party, "政黨" %>
  <%= form.text_field :party %>
</div>

<div>
  <%= form.label :age, "年齡" %>
  <%= form.text_field :age %>
</div>

<div>
  <%= form.label :politics, "政見" %>
  <%= form.text_area :politics %>
</div>

<div><%= form.submit %></div>

<br/>

<%= link_to '回到候選人列表', candidates_path %>

<% end %>